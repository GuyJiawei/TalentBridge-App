<div class="card-body col-12 container-sm border-0">
  <h2>Please Enter Your Details</h2>

  <form class="form signup-form">
    <div class="form-group form-row">
      <div class="col-3">
        <input type="email" class="form-control" id="email-signup" placeholder="Email: email@email.com" aria-describedby="emailInput">
      </div>

      <div class="col-3">
        <input type="text" class="form-control" id="firstName-signup" placeholder="John" aria-describedby="usernameInput">
      </div>
      
      <div class="col-3">
        <input type="text" class="form-control" id="lastName-signup" placeholder="Smith" aria-describedby="usernameInput">
      </div>
    </div>

    <div class="form-group row">
      <div class="col-6">
        <input type="password" id="password-signup" class="form-control" placeholder="Password: Talent1234#" aria-describedby="passwordHelpInline">
        <small id="passwordHelpInline" class="text-muted">
          Must be 10-20 characters long, and contain numbers and a special character
        </small>
        <p id="password-strength-result">
        </p>
      </div>

      <div class="col-6" id="sign-up-btn">
        <button class="btn btn-md btn-block" type="submit">Register</button>
      </div>
    </div>
 
  </form>
</div>

<script src="./js/signup.js"></script>